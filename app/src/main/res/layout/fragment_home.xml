<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivBanner"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/art_banner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvHeadingCartoonAndComic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Cartoon and Comic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivBanner" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCartoonAndComic"
            android:layout_width="0dp"
            android:layout_height="300dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvHeadingCartoonAndComic" />

        <TextView
            android:id="@+id/tvHeadingArtHistoryAndTheory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Art History and Theory"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rvCartoonAndComic" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvArtHistoryAndTheory"
            android:layout_width="0dp"
            android:layout_height="300dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvHeadingArtHistoryAndTheory" />

        <TextView
            android:id="@+id/tvHeadingFoundational"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Foundational"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rvArtHistoryAndTheory" />

        <!-- RecyclerView for "Foundational" -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvFoundational"
            android:layout_width="0dp"
            android:layout_height="300dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvHeadingFoundational" />

        <TextView
            android:id="@+id/tvHeadingDigital"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Digital"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rvFoundational" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDigital"
            android:layout_width="0dp"
            android:layout_height="300dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvHeadingDigital" />

        <TextView
            android:id="@+id/tvHeadingSpecialized"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Specialized"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rvDigital" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSpecialized"
            android:layout_width="0dp"
            android:layout_height="300dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvHeadingSpecialized" />

        <android.view.View
            android:id="@+id/bottomSpacer"
            android:layout_width="0dp"
            android:layout_height="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rvSpecialized" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>