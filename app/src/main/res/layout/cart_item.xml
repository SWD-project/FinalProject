<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_course_cart_detail"
        android:layout_width="80dp"
        android:layout_height="80dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/default_course2"

        />

    <TextView
        android:id="@+id/tv_title_cart_detail"
        android:layout_width="237dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:text="Title of course"
        android:textSize="20dp"

        app:layout_constraintStart_toEndOf="@+id/img_course_cart_detail"
        app:layout_constraintTop_toTopOf="parent"


        />

    <TextView
        android:id="@+id/tv_price_cart_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="$0"
        app:layout_constraintStart_toEndOf="@+id/img_course_cart_detail"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_cart_detail" />

    <CheckBox
        android:id="@+id/check_box_cart_detail"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:text="CheckBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>