        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FinalProject"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".CourseDetailActivity"
            android:exported="true"
            android:label="@string/title_activity_course_detail"
            android:theme="@style/Theme.FinalProject.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CategoryActivity"
            android:exported="false" />
        <activity
            android:name=".HomePage"
            android:exported="true"
            android:label="@string/title_activity_home_page"
            android:theme="@style/Theme.FinalProject.NoActionBar">

        </activity>
        <activity
            android:name=".CoursesActivity"
            android:exported="false" />
        <activity
            android:name=".SignInActivity"
            android:exported="true" />
        <activity
            android:name=".ProfileInstructorActivity"
            android:exported="false" />
        <activity
            android:name=".ProfileUserActivity"
            android:exported="false" />
        <activity
            android:name=".CheckOutSuccessActivity"
            android:exported="false" />
        <activity
            android:name=".CheckOutActivity"
            android:exported="false" />

        <activity
            android:name=".CartActivity"
            android:exported="true" >
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true" />
        <activity
            android:name=".SignUpActivity"
            android:exported="false" />
    </application>

</manifest>